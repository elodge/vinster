<div class="genie-box col-xs-6 col-xs-offset-3">

<h2 class="text-center">	
Apply Here!
</h2>

<br/>
<%= simple_form_for @post do |f| %>
	<%= f.input :title, label: 'Name'%>
	<br/>
	<%= f.input :description, label: 'Tell me about yourself' %>
	<br/>
	<%= f.input :image %>
	<br/>
	<%= f.button :submit, :class => 'btn btn-primary' %>    
	<br/>

<% end %>